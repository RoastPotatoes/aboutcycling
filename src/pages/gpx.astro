---
import { onMount } from "solid-js";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GPX Map</title>
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet/dist/leaflet.css"
    />
    <style>
      #map {
        width: 100%;
        height: 500px;
      }
    </style>
  </head>
  <body>
    <div id="map"></div>
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-gpx/1.5.1/gpx.min.js"></script>
    <script>
      const map = L.map("map").setView([51.505, -0.09], 13);

      L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
        maxZoom: 19,
      }).addTo(map);

      const gpxLayer = new L.GPX("/path-to-your-file.gpx", {
        async: true,
        marker_options: {
          startIconUrl:
            "https://cdnjs.cloudflare.com/ajax/libs/leaflet-gpx/1.5.1/images/pin-icon-start.png",
          endIconUrl:
            "https://cdnjs.cloudflare.com/ajax/libs/leaflet-gpx/1.5.1/images/pin-icon-end.png",
          shadowUrl:
            "https://cdnjs.cloudflare.com/ajax/libs/leaflet-gpx/1.5.1/images/pin-shadow.png",
        },
      })
        .on("loaded", function (e) {
          map.fitBounds(e.target.getBounds());
        })
        .addTo(map);
    </script>
  </body>
</html>
